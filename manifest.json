{
  "manifest_version": "1",
  "type": "WebApp",
  "meta": {
    "name": "Overwolf Logitech LED Sample App",
    "version": "0.0.1",
    "minimum-overwolf-version": "0.93.1.0",
    "author": "Overwolf",
    "icon": "icon.png",
    "icon_gray": "icon_gray.png",
    "description": "Overwolf Logitech LED Sample App"
  },
    "permissions" : [ "LogitechLed" ],
  "data": {
    "start_window": "index",

    "windows": {
      "index": {
        "file": "index.html",
        "transparent": false,
        "resizable": true,
        "show_in_taskbar": true,
        "size": {
          "width": 1150,
          "height": 380
        }
      }
    },
    "logitech" : { "minimal_lgs_version" : "8.82.149", "led" :{ "required_devices" : [ "Keyboard" ], "required_lighting_types" : [ "RGB", "PerkeyRGB" ] } }
  }
}
